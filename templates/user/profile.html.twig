{% extends 'base.html.twig' %}
{% block header %}
{% include 'header.html.twig'%}
{% endblock %}
{% block title %}Administrar Perfil{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/edit-profile.css') }}?v={{ random() }}" />
{% endblock %}


{% block content %}
<div class="center">
    <div class="profile-container">
        <h2>Administrar Perfil</h2>
        <form method="post" enctype="multipart/form-data">

            <label>Foto de Perfil Actual</label>
            <div class="profile-img-container">
                <img src="{{ asset(app.user.profilePicture|default('images/default-profile.png')) }}" alt="Foto de perfil" class="profile-picture">
            </div>

            <label for="profilePicture">Cambiar Foto de Perfil</label>
            <input type="file" id="profilePicture" name="profilePicture">
            
            <label for="nombre">* Nombre</label>
            <input type="text" id="nombre" name="nombre" value="{{ app.user.nombre }}" required>

            <label for="email">* Correo Electrónico</label>
            <input type="email" id="email" name="email" value="{{ app.user.email }}" required>

            <label for="password">Nueva Contraseña</label>
            <input type="password" id="password" name="password" placeholder="Dejar en blanco para no cambiar">

            <button type="submit">Guardar Cambios</button>
        </form>
    </div>
</div>

{% endblock %}

